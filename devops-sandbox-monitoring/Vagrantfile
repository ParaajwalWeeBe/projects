# Vagrantfile - ARM64 compatible for Apple Silicon / ARM hosts
Vagrant.configure("2") do |config|
  # Use an ARM64 base box
  config.vm.box = "bento/ubuntu-22.04"
  config.vm.hostname = "devops-sandbox"

  # Port forwarding (avoid 8080 conflicts on macOS host)
  config.vm.network "forwarded_port", guest: 9090, host: 9091, auto_correct: true  # Prometheus
  config.vm.network "forwarded_port", guest: 3000, host: 3001, auto_correct: true  # Grafana
  config.vm.network "forwarded_port", guest: 9093, host: 9094, auto_correct: true  # Alertmanager
  config.vm.network "forwarded_port", guest: 9100, host: 9101, auto_correct: true  # Node Exporter
  config.vm.network "forwarded_port", guest: 22,   host: 2222, auto_correct: true  # SSH

  # VirtualBox provider settings
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "3072"
    vb.cpus = 2
    vb.customize ["modifyvm", :id, "--uartmode1", "disconnected"] # Avoid serial port warnings
  end

  # Provisioning script
  config.vm.provision "shell", path: "provision/provision.sh"
end

